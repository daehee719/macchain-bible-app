{
  "name": "macchain-frontend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  
  "scripts": {
    "dev": "vite",
    "css:build": "tailwindcss -i src/styles/tailwind.css -o src/styles/tailwind-output.css --minify",
    "build": "npm run css:build && tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:coverage": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "ci:accessibility": "npm run build && (npx http-server ./dist -p 8080 & ) && npx pa11y http://127.0.0.1:8080 || true",
    "ci:lighthouse": "npm run build && (npx http-server ./dist -p 8080 & ) && npx @lhci/cli autorun --upload.disabled"
  },
  "dependencies": {
    "axios": "^1.3.4",
    "lucide-react": "^0.263.1",
    "chart.js": "^4.4.0",
    "react-chartjs-2": "^5.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.24",
    "tailwindcss": "^3.4.7",
    "@playwright/test": "^1.56.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitejs/plugin-react": "^3.1.0",
    "eslint": "^8.38.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "jsdom": "^27.0.0",
    "playwright": "^1.56.0",
    "prettier": "^2.8.7",
    "typescript": "^4.9.3",
    "vite": "^4.2.0",
    "vitest": "^1.0.0",
    "pa11y": "^6.0.0",
    "http-server": "^14.1.1"
  }
}
